<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MME.Mobile.Views.Templates.FlyoutHeaderTemplate">
    <VerticalStackLayout BackgroundColor="WhiteSmoke">
        <Image x:Name="ProfileImage" Source="male" VerticalOptions="Start" HorizontalOptions="Center" Margin="0, 10, 0, 0"></Image>
        <BoxView Grid.Row="1" HorizontalOptions="FillAndExpand" HeightRequest="1" Margin="0,10,0,0" Color="LightGray"/>
        <StackLayout BackgroundColor="{StaticResource AppBorderColor}" HeightRequest="40">
            <Label Margin="20,0" TextColor="#FFF" FontAttributes="Bold" x:Name="LabelWelcome" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Start" />
        </StackLayout>
        <BoxView Grid.Row="1" HorizontalOptions="FillAndExpand" HeightRequest="1" Color="LightGray"/>
    </VerticalStackLayout>
</ContentView>
