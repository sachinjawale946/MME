<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resource="clr-namespace:MME.Mobile.Resx"
             x:Class="MME.Mobile.Views.Templates.FlyoutFooterTemplate">
    <VerticalStackLayout Margin="0,20">
        <BoxView Color="LightGray" HorizontalOptions="FillAndExpand" HeightRequest="1" Margin="0,0,0,2"></BoxView>
        <StackLayout BackgroundColor="{StaticResource AppSecondaryBackground}" HeightRequest="40" VerticalOptions="CenterAndExpand">
            <Label TextColor="#FFF"
            Text="{x:Static resource:AppResources.ShellFooterLine}"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="Center"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentView>
