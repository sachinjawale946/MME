<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MME.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MME.Mobile"
    xmlns:views="clr-namespace:MME.Mobile.Views"
    xmlns:templates="clr-namespace:MME.Mobile.Views.Templates"
    FlyoutHeaderTemplate="{DataTemplate templates:FlyoutHeaderTemplate}">

    <Shell.Resources>
        <Style TargetType="Label"
       Class="FlyoutItemLabelStyle">
            <Setter Property="FontFamily" 
            Value="OpenSansRegular" />
        </Style>
    </Shell.Resources>

    <ShellContent Title="Events" Icon="eventicon" Route="EventsPage" ContentTemplate="{DataTemplate views:EventsPage}" ></ShellContent>
    <ShellContent Title="Members" Icon="membericon" Route="MembersPage" ContentTemplate="{DataTemplate views:MembersPage}" ></ShellContent>
    
    <MenuItem IconImageSource="logouticon.png" Text="Sign Out" StyleClass="MenuItemLayoutStyle" Clicked="OnMenuItemClicked">
    </MenuItem>

    <TabBar>
        <ShellContent Route="Login" ContentTemplate="{DataTemplate views:Login}" />
    </TabBar>

    <Shell.FlyoutFooter>
        <templates:FlyoutFooterTemplate/>
    </Shell.FlyoutFooter>

</Shell>
